set fish_greeting ""

set PYENV_ROOT $HOME/.pyenv
set PATH $PYENV_ROOT/shims $PYENV_ROOT/bin $PATH
set PATH ~/local/bin $PATH
set PATH ~/.local/bin $PATH
set PATH ~/gocode/bin $PATH
set PATH /var/lib/snapd/snap/bin $PATH

# set -x LC_ALL C
set -x PAGER /usr/bin/most
set -x LANG en_US.UTF-8

set -x EDITOR /usr/bin/nvim

set -x GOPATH /home/{{ user.id }}/gocode:/usr/lib/golang

alias code="flatpak run com.visualstudio.code"

set -x _JAVA_AWT_WM_NONREPARENTING 1
# set -x TERM tmux-256color

eval (python3 -m virtualfish auto_activation global_requirements)
source (pyenv init -|psub)
alias pipupdate="pip list -o | tail -n +3 | awk '{print $1}' | xargs -n 1 pip install -U"

